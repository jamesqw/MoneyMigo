<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Sort Transaction</h4>
    </div>
    <div class="modal-body">

      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="sorted_transaction_name" class="control-label">Name</label>
          <input type="text" class="form-control" id="sorted_transaction_name" name="name" placeholder="e.g. Bob's Insurance" />
          <div class="errors"></div>
        </div>

        <div class="form-group">
          <label for="sorted_transaction_category" class="control-label">Category</label>
          <select class="form-control" id="sorted_transaction_category" name="category"></select>
          <div class="errors"></div>
        </div>

        <div class="form-group">
          <label for="sorted_transaction_tags" class="control-label">Tags</label>
          <input type="text" class="form-control" id="sorted_transaction_tags" name="tags" placeholder="e.g. Car Expences, Car Insurance" />
          <div class="errors"></div>
        </div>

        <div class="form-group">
          <label for="sorted_transaction_note" class="control-label">Note</label>
          <textarea class="form-control" id="sorted_transaction_note" name="note"></textarea>
          <div class="errors"></div>
        </div>
      </form>

    </div>
    <div class="modal-footer">
      <button type="submit" class="save btn btn-default" title="Save">Save</button>
      <a class="btn btn-link" href="#" data-dismiss="modal" title="Cancel">Cancel</a>
    </div>
  </div>
</div>
