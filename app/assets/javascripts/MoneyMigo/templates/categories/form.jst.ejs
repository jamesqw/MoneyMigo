<div class="page-header">
  <h1><%- pageHeader() %></h1>
</div>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="category_name" class="col-md-2 control-label">Name</label>
    <div class="col-md-5">
      <input type="text" class="form-control" id="category_name" name="name" placeholder="e.g. Rent" />
    </div>
    <div class="errors col-md-5"></div>
  </div>

  <div class="form-group">
    <label for="category_type" class="col-md-2 control-label">Type</label>
    <div class="col-md-5">
      <select class="form-control" id="category_type" name="type"></select>
    </div>
    <div class="errors col-md-5"></div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <button type="submit" class="save btn btn-default" title="Save">Save</button>
      <a class="btn btn-link" href="<%= DotLedger.path.listCategories() %>" title="Cancel">Cancel</a>
    </div>
  </div>
</form>
